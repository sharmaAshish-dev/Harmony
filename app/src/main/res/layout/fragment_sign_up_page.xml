<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logoColorDarkCyan"
    tools:context=".Fragments.signUpPage">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:fontFamily="sans-serif-medium"
                    android:text="Here's \nyour first step with \nus!"
                    android:textColor="@color/logoColorWhite"
                    android:textSize="34sp" />

                <ImageView
                    android:id="@+id/vector"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_signup_page_vector" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:scrollbars="none"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true">

                <RelativeLayout
                    android:id="@+id/inputFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/round_edge_card"
                    android:padding="20sp">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:text="Name"
                        android:textColor="@color/logoColorDarkCyan"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtName"
                        android:background="@color/logoColorWhite"
                        android:hint="Enter Name"
                        android:inputType="textEmailAddress"
                        android:paddingTop="20sp"
                        android:paddingEnd="20sp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/logoColorBlack"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/seperator1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/userName"
                        android:background="@color/logoColorDarkCyan"
                        android:backgroundTint="@color/logoColorDarkCyan" />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:text="Email"
                        android:layout_marginTop="20sp"
                        android:layout_below="@+id/seperator1"
                        android:textColor="@color/logoColorDarkCyan"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/userEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtEmail"
                        android:background="@color/logoColorWhite"
                        android:hint="Enter Email Address"
                        android:inputType="textEmailAddress"
                        android:paddingTop="20sp"
                        android:paddingEnd="20sp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/logoColorBlack"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/seperator3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/userEmail"
                        android:background="@color/logoColorDarkCyan"
                        android:backgroundTint="@color/logoColorDarkCyan" />

                    <TextView
                        android:id="@+id/txtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/seperator3"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20sp"
                        android:text="Password"
                        android:textColor="@color/logoColorDarkCyan"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/userPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtPassword"
                        android:background="@color/logoColorWhite"
                        android:hint="Enter Password"
                        android:inputType="textPassword"
                        android:paddingTop="20sp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/logoColorBlack"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/seperator5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/userPassword"
                        android:background="@color/logoColorDarkCyan"
                        android:backgroundTint="@color/logoColorDarkCyan" />

                    <TextView
                        android:id="@+id/loginBtn"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/seperator5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30sp"
                        android:layout_marginBottom="20sp"
                        android:background="@drawable/button_background_blue"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Sign up"
                        android:textColor="@color/logoColorWhite"
                        android:textSize="20sp" />

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

</RelativeLayout>
